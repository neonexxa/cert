<div class="container">
	<br>
	<br>
	<br>

	<div class="row"> <!-- begin row -->
		<h4>
			List of certified professionals
		</h4>
		<p>Certificate.my papers are skills-based. For more details click on the corresponding subject icon in the summary table below:</p>
		<table class="bordered" style="border: solid grey 1px">
	        <thead>
	        	<tr>
	        		<td colspan="4" style="text-align: center">
	        			Certified <%= @certificate.title %>
	        		</td>
	        	</tr>
	        	<tr class="#ffeb3b yellow" style="font-weight: 900">
	        		<td style="text-align: center;">
	        			Id
	        		</td>
	        		<td>
	        			Name
	        		</td>
	        		<td>
	        			Obtained
	        		</td>
	        		<td>
	        			Expires
	        		</td>
	        	</tr>
	        </thead>
	        <tbody>
	        	<% if @users.empty? %>
	        		<tr>
	        			<td style="width: 100%; text-align: center" colspan="4">
	        				No Professionals certified for this yet
	        			</td>
	        		</tr>
	        	<% else %>
		          	<% @users.each do |user| %>
			        	<tr class="hoverable can-click-this-row" data-href="<%= profesional_user_path(user.id) %>">
			        		<td style="width: 10%">
				            		<p style="text-align: center;"><%= user.id %></p>
				            </td>
				            <td style="width: 50%">
				            		<p><%= user.name %></p>
				            </td>
				            <td style="width: 20%">
				            		<p>first certified</p>
				            </td>
				            <td style="width: 20%">
				            		<p>expired</p>
				            </td>
			          	</tr>	
		        	<% end %>
	        	<% end %>
	        </tbody>
	    </table>
	</div> <!-- end of row -->

	<br>
	<br>
	<br>
	<br>
</div>